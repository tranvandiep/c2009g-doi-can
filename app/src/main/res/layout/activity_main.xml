<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5px"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2196F3"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="NHAP THONG TIN" />

    <TextView
        android:id="@+id/abcsd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2196F3"
        android:textSize="20dp"
        android:text="Ho Ten" />

    <EditText
        android:id="@+id/am_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhap ho ten"
        android:text="" />

    <TextView
        android:id="@+id/asdasd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2196F3"
        android:textSize="20dp"
        android:text="Email" />

    <EditText
        android:id="@+id/am_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhap email"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/sdfsdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2196F3"
        android:textSize="20dp"
        android:text="Dia chi" />

    <EditText
        android:id="@+id/am_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhap dia chi"
        android:inputType="textPersonName"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/am_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:text="Huy" />

        <Button
            android:id="@+id/am_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="Luu Du LIEU" />
    </LinearLayout>

    <Button
        android:id="@+id/am_open_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open New Activity" />
</LinearLayout>